<div class="beerbio">
  <div class="container">
    <div class="row" style="padding:30px">
      <div class="col-md-1"></div>
      <div class="col-md-2">
        <div class="card-image">
          <img src={{image_url}} />
        </div>
      </div>
      <div class="col-md-8">
        <h2>{{name}}</h2>
        <h3>{{tagline}}</h3>
        <p>{{description}}</p>
        <p><strong>Food pairing:</strong></p>
        <ul>
        {{#each food_pairing}}
        <li>{{this}}</li>
        {{/each}}
        </ul>
        <p><strong>Brewers' tips:</strong> {{brewers_tips}}</p>
      </div>
      <div class="col-md-1"></div>
    </div>
  </div>
</div>