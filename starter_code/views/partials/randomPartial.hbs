<div class="d-flex justify-content-around">
  <div>
    <img class="beerimg2" src="{{this.image_url}}" alt="Beer image">
  </div>
  <div class="beerText">
    <h3>{{this.name}}</h3>
    <h5 class="beerSub">{{this.tagline}}</h5>
    <p>{{this.description}}</p>
    <h6>Food Pairing</h6>
    <ul>
      {{#each this.food_pairing}}
      <li>{{this}}</li>
      {{/each}}
    </ul>
    <h6>Brewer Tips:</h6>
    <p>{{this.brewers_tips}}</p>
    </div>
</div>