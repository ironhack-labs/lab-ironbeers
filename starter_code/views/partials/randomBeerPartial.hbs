<div class="random-container">
    <div class="beer-image">
        <img src="{{this.image_url}}" alt="">

    </div>
    <div class="random-beer-content">

        <h2>{{this.name}}</h2>
        <p class="tagline">{{this.tagline}}</p>
        <p>{{this.description}}</p>
        <h2>Food Pairing:</h2>
        <ul>
            {{#each food_pairing}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <h2>Brewers Tips:</h2>
        <p>{{this.brewers_tips}}</p>
    </div>
</div>