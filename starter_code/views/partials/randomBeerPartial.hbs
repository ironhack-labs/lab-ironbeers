

<div class="container mt-5">
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-2">
                <img class="card-img img-fluid" src="{{this.image_url}}" alt="Beer image">
        </div>
        <div class="col-sm-6 mx-5">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.tagline}}</p>
          <p class="card-text">{{this.description}}</p>
          <h6>Food Pairing</h6>
          <ul>
            {{#each this.food_pairing}}
              <li>{{this}}</li>
            {{/each}}
          </ul>
          <p><b>Brewer Tips: </b>{{this.brewers_tips}}</p>
        </div>
    </div>
</div>