<div class="cards-container">
  <div class="card border-0 text-center" style="width: 18rem;">
    <img class="card-img-top w-25" src="{{this.image_url}}" alt="Card image">
    <div class="card-body">
      <h5 class="card-title">{{this.name}}</h5>
      <p class="card-text text-secondary">{{this.tagline}}</p>
      <p class="card-text">{{this.description}}</p>
      <a href="/{{id}}" class="btn btn-primary">More Information</a>
    </div>
  </div>