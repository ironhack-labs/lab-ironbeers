<div class="beer">
    <div class="beer-images">
        <img src="{{this.image_url}}" alt="">
    </div>
    <div class="beer-infos">
        <h3 class="beer-name">{{this.name}}</h3>
        <h4 class="beer-sub">{{this.tagline}}</h4>
        <p class="beer-description">{{this.description}}</p>
        <div class="beer-additional-info">
            <h4>Food Pairing</h4>
            <ul class="pairing-list">
                {{#each this.food_pairing}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p><span>Brewers Tips: </span>{{this.brewers_tips}}</p>
        </div>
    </div>
</div>