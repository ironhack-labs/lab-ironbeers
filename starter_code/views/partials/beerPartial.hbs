<div class="card">
  <div class="img-box">
    <img src="{{this.image_url}}" class="card-img-top" alt="{{this.name}}">
  </div>
  <div class="card-body">
    <h5 class="card-title">{{this.name}}</h5>
    <h6 class="card-subtitle">{{this.tagline}}</h6>
    <p class="card-text">{{this.description}}</p>
  </div>
</div>