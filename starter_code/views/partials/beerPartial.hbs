<div class="card d-flex flex-wrap align-content-around" style="width: 25rem;">

    <img class="beer-img " src="{{this.image_url}}" alt="">
    <div class="card-body d-flex flex-column align-content-center">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="card-text">{{this.description}}</p>
        <button onclick="window.location.href='/{{this.id}}' ">This beer</button>
    </div>
</div>
</div>