<div class="uk-card uk-card-default uk-grid-collapse uk-child-width-1-2@s uk-margin" uk-grid>
  <div class="uk-card-media-left uk-cover-container">
    <img class="uk-align-center" src={{image_url}} alt="" width="70px">
  </div>
  <div class="uk-card-body">
    <h1>{{name}}</h1>
    <h4 style="color:grey"></h4>{{tagline}}</h4>
    <p>{{description}}</p>
    <h4>Food Pairing</h4>
    <ul class="people_list">
      {{#each food_pairing}}
      <li>{{this}}</li>
      {{/each}}
    </ul>
<p><strong>Brewers Tips: </strong> {{brewers_tips}}</p>
  </div>
</div>