<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <img class="card-img-top imgsizetoo" src="{{this.image_url}}" alt="beer image cap">
    </div>
    <div class="col-md-9">
      <div class="card-body">
        <h2 class="card-title">{{this.name}}</h2>
        <h5 class="card-title text-muted">{{this.tagline}}</h5>
        <p class="card-text">{{this.description}}</p>
        <h5>Food Pairings</h5>
        <ul>
          {{#each this.food_pairing}}
          <li>{{this}}</li>
          {{/each}}

        </ul>

        <p class="card-text">
          <b>Brewing Tips: </b>{{this.brewers_tips}}</p>

      </div>


    </div>



  </div>
</div>
</div>