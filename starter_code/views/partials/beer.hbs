<div class="beers-box">
    <div class="beer-image">
        <img class="card-img-top" src="{{beer.image_url}}" alt="beer {{beer.name}}">
    </div>
    <div class="beer-text">
        <h5 class="beer-title">{{beer.name}}</h5>
        <p class="beer-tagline">{{beer.tagline}}</p>
        <p class="beer-description">{{beer.description}}</p>
    </div>
</div>