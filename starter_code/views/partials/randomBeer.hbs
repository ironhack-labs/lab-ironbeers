<div class="card mb-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="{{this.image_url}}" class="card-img" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{{this.name}}}</h5>
        <p class="card-text">{{{this.tagline}}}</p>
        <p class="card-text">{{{this.description}}}</p>
        <h2>Food Pairing</h2>
        <ul>
        {{#each this.food_pairing}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
        <p class="card-text">'Brewers Tips: '{{{this.brewers_tips}}}</p>
      </div>
    </div>
  </div>
</div>