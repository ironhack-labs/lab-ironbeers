<h2>Random Beers</h2>

<div class="cards-container random-beers">
    {{#each beers}}
    <div class="card mb-3 card-random" style="max-width: 540px;">
        <div class="row no-gutters">
            <div class="col-md-4 card-img">
                <img src="{{this.image_url}}" class="card-img" alt="random image">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text"><small class="text-muted">{{this.tagline}}</small></p>
                    <p class="card-text">{{this.description}}</p>
                    <br>
                    <ul>
                        {{#each this.food_pairing}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>
                    <p class="card-text">{{this.brewers_tips}}</p>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>