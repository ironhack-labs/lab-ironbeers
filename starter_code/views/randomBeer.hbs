<div class="random-beers-container">
  {{#each beers}}
    <div class="random-beer">
      <img src="{{this.image_url}}" alt="bootle image">
      <div class="beer-text">
        <h5>{{this.name}}</h5>
        <p class="shadowed-text">{{this.tagline}}</p>
        <p>{{this.description}}</p>
        <p><span>Food Pairing</span></p>
        <ul>
          {{#each this.food_pairing}}
            <li>{{this}}</li>
          {{/each}}
        </ul>
        <p><span>Brewer Tips: </span>{{this.brewers_tips}}</p>
      </div>
    </div>
  {{/each}}
</div>