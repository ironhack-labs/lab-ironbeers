<main class="container py-5">


{{#each beers}} 
<div class="d-flex w-100 py-5">
  <img class="d-block" style="height: 500px" src="{{image_url}}" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">{{name}}</h5>
    <h6 class="card-subtitle mb-2 text-muted">{{this.tagline}}</h6>
    <p class="card-text mb-4">{{this.description}}</p>
    <h6 class="card-subtitle mb-2">Food Pairing</h6>
    <ul>
      {{#each food_pairing}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
    <h6 class="card-subtitle mb-2">Food Pairing:</h6>
    <p class="card-text">{{this.brewers_tips}}</p>
  </div>
</div>


{{/each}}

  </main>