<!--layout.hbs-->
{{#each beer}}
<div class="content container">
    <section class="row random-beer">
        <div class="image-beer col-md-2">
            <img src="{{image_url}}" alt="">
        </div>
        <div class="details-beer col-md-10">
            <h1>{{name}}</h1>
            <h2>{{tagline}}</h2>
            <p>{{description}}</p>
            <h3>Food Pairing: </h3>
            <ul>
                {{#each food_pairing}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
            <h3 class="tips">Brewer Tips: </h3><span>{{brewers_tips}}</span>
        </div>
    </section>
</div>
{{/each}}