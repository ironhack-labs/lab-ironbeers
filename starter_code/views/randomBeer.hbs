<div id="random">
  {{#each beer}}
  <div class="left">
    <img class="img-beer" src="{{this.image_url}}" alt="{{this.name}} picture" />
  </div>
  <div class="right">
    <br>
    <h1 id="random-name">{{this.name}}</h1>
    <p id="random-tag">{{this.tagline}}</p>
    <br>
    <p id="random-desc">{{this.description}}</p>
    <br>
    <h4 id="random-food"><strong>Food Pairing</strong></h4>
    <br>
    <ul id="random-list">
      {{#each food_pairing}}
      <li>{{this}}</li>
      {{/each}}
    </ul>
    <br>
    <p id="random-tips"><strong>Brewer Tips:</strong> {{brewers_tips}}</p>
    {{/each}}
  </div>
</div>