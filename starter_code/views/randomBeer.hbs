<div class="random-container">
  <img class="beer-img" src="{{ this.image_url }}" alt="{{ this.name }}"/>
  <div class="beer-text">
    <h2 class="beer-name">{{ this.name }}</h2>
    <h4 class="beer-tag">{{ this.tagline }}</h4>
    <p class="beer-info">{{ this.description }}</p>
    <h4>Foog Pairing</h4>
       <ul>
         {{#each this.food_pairing}}
           <li>{{this}}</li>
         {{/each}}
       </ul>
       <p><strong>Brewers Tips:</strong> {{ this.brewers_tips }}</p>
  </div>
</div>