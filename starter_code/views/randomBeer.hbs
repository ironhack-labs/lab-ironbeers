<div class="random-beer-wrapper">
    <div class="random-beer-image-wrapper" style="background-image:url('{{beer.image_url}}')"></div>
    {{#each this.beer}}
    <div class="beer-info">
        <h3>{{ beer.name }}</h3>
        <span>{{ beer.tagline }}</span>
        <p>{{ beer.description }}</p>
        <h5>Food Pairing</h5>
        <ul>
            {{#each beer.food_pairing}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>
            <b>Brewers Tips: </b>{{beer.brewers_tips}}</p>
    </div>
    {{/each}}
</div>