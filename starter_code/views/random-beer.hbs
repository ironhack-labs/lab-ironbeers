<div class="random-beer">
    <img src="{{beers.0.image_url}}" height="250px">
    <div class ="text">
    <h1>{{beers.0.name}}</h1>
    <p class ="tagline">{{beers.0.tagline}}</p>
    <p class="description">{{beers.0.description}}</p>
        <h2>Food Pairing</h2>
          <ul>
              {{#each beers.0.food_pairing}}
              <li>{{this}}</li>
              {{/each}}
          </ul>
          <p><span>Brewers Tips: </span>{{beers.0.brewers_tips}}</p>
    
    </div>

</div>