
<div class="main-content">
<div class="card-container-random">
  <img src={{beer.image_url}} alt="" height="400px">
  <div class="random-text">
  <h3>{{beer.name}}</h3>
  <h5><i>{{beer.tagline}}</i></h5>
  <p>{{beer.description}}</p>
  <h4>Food Paring</h4>
  <ul>
    {{#each beer.food_pairing}}
    <li>{{this}}</li>
    {{/each}}
  </ul>
  <p><b>Brewers tips: </b>{{beer.brewers_tips}}</p>
</div>
</div>
</div>