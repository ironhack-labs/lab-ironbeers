<div class="random-beer-container row">
  {{#with randomBeer}}
  <div class="col-sm-4">
    <div class="img-rndm">
      <img class="beer-img" src="{{this.image_url}}" alt="{{this.name}} image">    
    </div>
  </div>
  <div class="col-sm-8">
    <div class="name">
      <h2>{{this.name}}</h2>
    </div>
    <div class="tagline">
      <h3>{{this.tagline}}</h3>    
    </div>
    <div class="description">
      <p>{{this.description}}</p>    
    </div>
    <div class="food_pairing">
      <p><span>Food Pairing</span></p>
      <ul>
        {{#each food_pairing}}
          <li>{{this}}</li>
        {{/each}}
      </ul>    
    </div>
    <div class="brewers_tips">
      <p><span>Brewers Tips: </span>{{this.brewers_tips}}</p>    
    </div>
  </div>
  {{/with}}
</div>