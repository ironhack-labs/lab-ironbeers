<section class="row random-beer">
  {{#each beer}}
    <div class="col-4">
      <figure class="beer-img">
        <img src="{{image_url}}" alt="">
      </figure>
    </div>
    <div class="col-4">
      <h1>{{name}}</h1>
      <h2>{{tagline}}</h2>
      <p>{{description}}</p>  
      <p>
        <span class="bold-text">Food Pairing:</span> 
        <ul>
        {{#each food_pairing}}
        <li>{{this}}</li>
        {{/each}}
        </ul>

      </p>
      <p><span class="bold-text">Brewer Tips:</span> {{brewers_tips}}</p>
  </div>
  {{/each}}
</section>