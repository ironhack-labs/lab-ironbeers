<div class="random-beer-container">
  {{#each beer}}

    <img class="img-random-beer" src="{{image_url}}" alt="{{name}}">

    <div class="beer-container">
      <h2>{{name}}</h2>
  
      <aside>{{tagline}}</aside>
  
      <p>{{description}}</p>
  
      <h3>Food pairing</h3>
      {{#each food_pairing}}
        <ul>
          <li>{{this}}</li>
        </ul>
      {{/each}}

      <h3>Brewers tips</h3>
      <p>{{brewers_tips}}</p>
    </div>

  {{/each}}
</div>


