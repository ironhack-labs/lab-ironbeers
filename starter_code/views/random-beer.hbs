<div class="container-fluid">
    <br>
    <br>
    <br>
    <div class="row">
        {{#each beers}}
        <div class="col-md-4">
            <img class="random-img-top" src="{{this.image_url}}" alt="">
        </div>
        <div class="col-md-8">
            <h3 class="card-title">{{this.name}}</h3>
            <h6 class="card-subtittle">{{this.tagline}}</h6>
            <p class="card-text">{{this.description}}</p>
            <h6><strong>Food Pairing</strong></h6>
            <ul>
                {{#each food_pairing}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p><strong>Brewers tip: </strong>{{this.brewers_tips}}</p>
        </div>
        {{/each}}
    </div>
</div>