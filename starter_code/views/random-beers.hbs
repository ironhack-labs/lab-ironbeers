<div class="content-body random-beer-page">

    <div class="random-beer-container">

        <div class="random-beer-photo">
            <img src="{{image_url}}">
        </div>
        
        <div class="random-beer-text">

            <h1>{{name}}</h1>

            <h3 class="tagline">{{tagline}}</h3>

            <p>{{description}}</p>

            <p class="foodpairing">Food Pairing:</p>

                {{#each food_pairing}}

                    <li>{{this}}</li>

                {{/each}}

            <p class="brewertips"><b>Brewer's Tips: </b><span>{{brewers_tips}}</span></p>

        </div>

    </div>

</div>