{{#each randomBeer}}

<div class="random-beer-container">
    <img src="{{this.image_url}}">

    <div class="info">
        <h2>{{this.name}}</h2>
        <h3>{{this.tagline}}</h1>
        <p>{{this.description}}</p>

        <h4>Food pairing:</h4>

        <ul>
        {{#each this.food_pairing}}
                <li>{{this}}</li>
        {{/each}}
        </ul>

        <p><strong>Brewers Tips:</strong> {{this.brewers_tips}}</p>
        {{/each}}
    </div>
</div>

{{!-- You should display an image, name, description, tagline, food pairing and brewer tips. --}}