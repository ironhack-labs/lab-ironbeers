{{#each beer}}
<div class="random-container">
    <div>
        <img src="{{this.image_url}}">
    </div>
    <div>
        <h2>{{this.name}}</h2>
        <p>{{this.tagline}}</p>
        <p>{{this.description}}</p>
        <h3>Food pairing</h3>
        <ul>
            {{#each this.food_pairing}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>
            <span>Brewer Tips:</span>
            {{this.brewers_tips}}</p>
    </div>
</div>
{{/each}}