{{#each beers}}
<div class="img-div">
  <img class="r-beer-img" src="{{image_url}}" alt="beer-img">
</div>
<div class="r-card text-center">

  <div class="r-text">
    <h1 class="r-beer-name">{{name}} </h1>
    <h4 class="r-beer-tagline">{{tagline}}</h4>
    <p class="r-beer-description">{{description}}</p>
    <h3 class="r-beer-name-2">Food Pairing</h3>
    <ul class="pairings_list">
      {{#each food_pairing}}
      <li>{{this}}</li>
      {{/each}}
    </ul>
    <p>{{brewers_tips}}</p>
  </div>
</div>
{{/each}}