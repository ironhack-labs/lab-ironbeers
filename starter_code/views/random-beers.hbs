{{#each randomBeer}}
<div class="random-beer-container">
  <div class="random-beer-img">
      <img class="card-img" src="{{this.image_url}}" alt="Card image cap">
  </div>
  <div class="random-beer-info">
      <h5>{{this.name}}</h5>
      <p>{{this.description}}</p>
      <ul><b>Food Pairing</b> 
            {{#each this.food_pairing}}
            <li>{{this}}</li>
            {{else}}
            <p>No food pairing yet!</p>
            {{/each}}
      </ul>
      <p><b>Brewers Tips:</b>{{this.brewers_tips}}</p>
  </div>
</div>
{{/each}}