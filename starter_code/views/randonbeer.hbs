<div class="randon-beer">
  <div style="height: 300px;">
    <img src="{{beer.0.image_url}}" alt="" style="height: 100%;">
  </div>
  <div class = 'informations'>
  <h4>{{beer.0.name}}</h4>
  <h5>{{beer.0.tagline}}</h5>
  <p>{{beer.0.description}}</p>
  <h3>Food Pairing</h3>
  <ul>
    {{#each beer.0.food_pairing}}
    <li style="margin: 5px 0;">{{this}}</li>
    {{/each}}
  </ul>
  <h3>Brewers Tips</h3>
  <p>{{beer.0.brewers_tips}}</p>
  </div>
</div>