<div class="beer2">
    {{#each beers}}
    <img class="beer-img2" src="{{this.image_url}}" alt="beer image">
    <div class="beer-body2">
        <h5 class="beer-title2">{{this.name}}</h5>
        <p class="beer-text2">{{this.tagline}}</p>
        <p class="beer-text2">{{this.description}}</p>
        <h3>Food Pairing</h3>
        <ul class="beer-text2">
            {{#each this.food_pairing}}
                <li>{{this}}</li>
            {{/each}} 
        </ul>
        <h3>Brewers' tips</h3>
        <p class="beer-text2">{{this.brewers_tips}}</p>
    </div>
    {{/each}}
</div>

