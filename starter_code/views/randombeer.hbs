<div class="container randombeer">
    {{#each beer}}
    <div class="row">
        <div class="col-2">
            <img src={{this.image_url}}>
        </div>
        <div class="col-8">
            <h2>{{this.name}}</h2>
            <h5>{{this.tagline}}</h5>
            <p>{{this.description}}</p>
            <h6>Food Pairing</h6>
            <ul>
            {{#each this.food_pairing}}
                <li>{{this}}</li>
            {{/each}}
            </ul>
            <p><strong>Brewers tips:</strong> {{this.brewers_tips}}</p>
        </div>
        <div class="col-2">
        </div>
    </div>
     
    {{/each}}


</div>
