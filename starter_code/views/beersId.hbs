<div class="card mb-3 mx-auto border-0 mt-5" style="max-width: 540px;">
  <div class="row">
    <div class="col-md-4">
      <img src={{image_url}} class="card-img w-50" alt="Image">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{name}}</h5>
        <p class="card-text text-secondary">{{tagline}}</p>
        <p class="card-text">{{description}}</p>
        <h6>Food Pairing</h6>
        <ul>
            {{#each food_pairing}}
                <li>{{this}} </li>
            {{/each}}
        </ul>
        <p class="card-text"><strong>Brewer Tips:</strong> {{brewers_tips}}</p>
      </div>
    </div>
  </div>
</div>