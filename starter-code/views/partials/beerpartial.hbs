<div class="beer">
  {{#if clickable}}


  <a href="/beer/{{id}}">
    {{/if}}
    <div class="image">
      <img src="{{image_url}}" alt="{{name}} beer">
    </div>
    <h3>{{name}}</h3>

    {{#if clickable}}
  </a>
  {{/if}}

  <p class="tagline">"{{tagline}}"</p>
  <p class="description">{{description}}</p>

  {{#if extended}}

  <p class="pairings">
    <strong>Food pairings:</strong>
  </p>
  <ul>
    {{#each food_pairing}}
    <li>{{this}}</li>
    {{/each}}
  </ul>
  <p class="tips">
    <strong>Brewer Tips:</strong> {{brewers_tips}}
  </p>

  {{/if}}
</div>