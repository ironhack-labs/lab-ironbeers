<div class="container">
    <div class="beer-card">
        <img src="{{this.image_url}}" alt="this {{this.name}}" height="300" />
        <h2>{{this.name}}</h2>
        <h4 id="tagline">{{this.tagline}}</h4>
        <h4>Food Pairing</h4>
        <p>{{this.description}}</p>

        <ul class="food-pairing">
            {{#each this.food_pairing}}
            <li>{{this}}</li>
            {{/each}}
        </ul>

        <p><span id="bold">Brewer tips: </span>{{this.brewers_tips}}</p>
    </div>
</div>