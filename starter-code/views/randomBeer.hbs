<div class="randomBeer-content">
    {{#with randomBeer}}
    <div class="randomBeer-card">
        <div class="randomBeer-image">
            <img src="{{this.image_url}}" alt="Beer image">
        </div>
        <div class="beer-details">
            <h1>{{this.name}}</h1>
            <caption>{{this.tagline}}</caption>
            <p>{{this.description}}</p>
            <h3>Food Pairing</h3>
            <ul>
                {{#each this.food_pairing}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p><span>Brewers Tips: </span>{{this.brewers_tips}}</p>
        </div>
    </div>
    {{/with}}



</div>