<div class="container">
    <h1>Random Beer</h1>
    <div class="row">
        <ul>
            {{#each responseFromAPI}}
            <li>
                <h4>{{name}}</h4>
                <img src={{image_url}}>
                <p>{{description}}</p>
                <p>
                    <strong>Food Pairing</strong>
                    <ul>
                        {{#each food_pairing}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </p>
                <p><strong>Brewer tips:</strong> {{brewers_tips}}</p>
                <small>{{tagline}}</small>
            </li>
            {{/each}}
        </ul>
    </div>
</div>