<div class="random-beer-container">
    <div class="random-image-container">
        <img src="{{myRandomBeer.image_url}}" alt="{{myRandomBeer.name}}">
    </div>
            
    <div class="random-beer-text">
        <div class= "name">{{myRandomBeer.name}}</div>
        <div class= "description">{{myRandomBeer.description}}</div>
        <p>Tageline</p>
        <div class= "tageline">{{myRandomBeer.tagline}}</div>
        <p>Food pairing</p>
        <ul class= "foor-pairing"> 
        {{#each myRandomBeer.food_pairing}} 
            <li>{{this}}</li>
        {{/each}}
        </ul>
        <p>Brewer tips</p>

        <div class= "brewertips">{{myRandomBeer.brewers_tips}}</div>
    </div>
</div>  