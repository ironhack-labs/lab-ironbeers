<div class="beer-group">
    {{#each beer}}
    <div class="beer-random">
        <img src={{this.image_url}} alt="beer">
        <div class="text-random">
            <h2>{{this.name}}</h2>
            <h4>{{this.tagline}}</h4>
            <p>{{this.description}}</p>
            <h3>Food Pairing</h3>
            <ul>
                {{#each this.food_pairing}}
                <li>{{ this }}</li>
                {{/each}}
            </ul>
            <p>Brewers tips: {{this.brewers_tips}}</p>
        </div>
    </div>
    {{/each}}
</div>