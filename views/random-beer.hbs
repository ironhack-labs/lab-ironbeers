<div class="container">
    <h1>Random Beer</h1>
    <div class="row">
        {{#each newRandomBeer}}
        {{> partialBeer}}
        <!--como acceder a un elemento concreto del array?
        newRandomBeer.0.name?
        -->
    </div>
    <div class="pair-food-section">
        <h5 class="text-bg-dark rounded p-2">Food pairing</h5>
        <ul>
            {{#each this.food_pairing}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <h5 class="text-bg-dark rounded p-2">Brewer tips</h5>
        <p>{{this.brewers_tips}}</p>
        {{/each}}
    </div>
</div>
</div>