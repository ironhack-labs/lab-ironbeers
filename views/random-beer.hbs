<section class="container d-flex random align-items-center">
    <div class="row d-flex ">
        {{#each randombeer}}
        <div class="col-md-3">
            <img class="img-random" src="{{this.image_url}}">
        </div>
        <div class="col-md-8">
            <h1>{{this.name}}</h1>
            <p>{{this.tagline}}</p>
            <hr>
            <p>{{this.description}}</p>
            <h2>Food Pairing</h2>

            <ul>
                {{#each this.food_pairing}}
                <li>{{this}}</li>
                {{/each}}
            </ul>

            <p><strong>Brewers Tips:</strong>{{this.brewers_tips}}</p>
        </div>

        {{/each}}


    </div>
</section>