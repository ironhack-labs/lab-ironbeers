<div>
    {{#each randomB}}
    <div class="card mb-3" style="max-width: 500px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="{{image_url}}" class="img-fluid rounded-start" alt="{{name}}">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <p class="card-text">{{description}}</p>
                    <p class="card-text">{{tagline}}</p>
                    <p class="card-text">{{food_pairing}}</p>
                    <p class="card-text">{{brewer_tips}}</p>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>