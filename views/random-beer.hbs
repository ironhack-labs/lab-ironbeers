{{#each randomBeer}}
  <div class='whole-random-beer'>
    <img class='images' src='{{this.image_url}}' alt='Beer Image' />
    <div class='random-beer-text'>
      <h2> {{this.name}} </h2>
      <h5>{{this.description}}</h5>
      <h5>{{this.tagline}}</h5>
      <h5><strong>Food Pairing:</strong><br />
        <ul><li>{{this.food_pairing}}</li>
        </ul></h5>
      <h5><b>Brewer Tips:</b><br /> {{this.brewers_tips}}</h5>
    </div>
  </div>
{{/each}}