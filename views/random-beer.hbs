<article class="beer-card">
    <img src="{{randomBeer.image_url}}" alt="{{randomBeer.name}}" height="150px" width="56px">
    <h3>{{randomBeer.name}}</h3>
    <p>{{randomBeer.description}}</p>
    <i>{{randomBeer.tagline}}</i>
    <h4>Food pairing:</h4>
    <ul>
        {{#each randomBeer.food_pairing}}
            <li>
                {{this}}
            </li>
        {{/each}}
    </ul>
    <h4>Brewer Tips:</h4>
    <p>{{randomBeer.brewers_tips}}</p>
</article>