<h1>Cerveza aleatoria:</h1>
<div class="container">
    {{#each cheve}}
       <div class="col" style=" display: flex; flex-direction: column; text-align: center; align-content: center;">
			<div class="card shadow-sm" style="align-items: center;">
				<img src="{{this.image_url}}" class="thumbnail-image" width="150px"/>
				<div class="card-body">
					<h2>{{this.name}}</h2>
					<p class="card-text">{{this.description}}.</p>
					<div class="d-flex justify-content-between align-items-center">
						<div class="btn-group">
							<button type="button" class="btn btn-sm btn-outline-secondary">View</button>
							<button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
						</div>
						
					</div>
				</div>
			</div>
		</div>
    {{/each}}
</div>