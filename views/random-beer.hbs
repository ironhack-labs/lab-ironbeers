<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='stylesheet' href='/stylesheets/styles.css' />
    <title>Document</title>
  </head>
  <body>
    {{#each responseFromAPI}}
      <div class='random-beer'>
        <div class='random-beer-img'>
          <img src='{{image_url}}' alt='beer image' />
        </div>
        <div>
          <div class='random-beer-info'>
            <h3>{{name}}</h3>
            <p>{{tagline}}</p>
            <p>{{description}}</p>
            <b>Food Pairing</b>
            {{!-- <ul>
              {{#each food_pairing}}
                <li>{{this}}</li>
              {{/each}}
            </ul> --}}
            {{#each food_pairing}}
              <ul><li><p>{{this}}</p></li></ul>
            {{/each}}
            <p><b>Brewers Tips:</b>{{brewers_tips}}</p>
          </div>
        </div>
      </div>
    {{/each}}
  </body>
</html>