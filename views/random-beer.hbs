<div class="container">


    <div class="row mt-4">
        {{#each randombeer}}


        <div class="cartRandom col lg-2">
            <img src="{{image_url}}" alt="">
        </div>

        <div class="col lg-10">
            <h1 class="title">{{name}}</h1>
            <article>{{description}}</article>
            <p>{{tagline}}</p>
            <ul>

                {{#each food_pairing}}
                <li>{{this}}</li>

                {{/each}}
            </ul>
            <p><strong>Browers tips:</strong>{{brewers_tips}}</p>
        </div>


        {{/each}}


    </div>

</div>