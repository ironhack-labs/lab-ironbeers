<div>



    {{#each randomBeerFromApi}}


    <div id="random-beers">

    

            <img src="{{this.image_url}}" alt="" width="100px" height="300px">

            <div id="beer-info">
                <h2>{{this.name}}</h2>
                <p id="tagline">{{this.tagline}}</p>
                <p>{{this.description}}</p>
                <p><span class="bold">Food Pairing:</span></p>
                <ul>
                    {{#each this.food_pairing}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
            
                <p><span class="bold">Brewers Tips:</span> {{this.brewers_tips}}</p>
            </div>

    </div>



    {{/each}}


</div>