<div class="d-flex justify-content-center flex-wrap">
    {{#each randomBeer}}
        <img src="{{this.image_url}}" class="card-img-top mt-4 mx-3" style="width: 100px; height: 350px"alt="beers img">
        <div class="card mt-5" style="width: 800px; height: 600">
            <div class="card-body">
            <h3 class="card-title">{{this.name}}</h3>
            <p class="card-text">{{this.description}}</p>
            <h6 class="card-title">{{this.tagline}}v</h6>
            <div>
            <h4>Food Pairing</h4>
            <ul>
                {{#each food_pairing}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p><b>Brewer Tips: </b>{{brewers_tips}}</p>
            </div>
            </div>
        </div>
    {{/each}}
</div>