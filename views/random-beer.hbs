<div>
    <div>
        {{#if this.image_url}}
            <img src="{{this.image_url}}" alt="{{this.name}}">
        {{else}}
            <img src="/images/beer.png" alt="placeholder: No image available">
        {{/if}}
        <h1>{{this.name}}</h1>
        <p>{{this.tagline}}</p>
        <p>{{this.description}}</p>
        <p><strong>Food Pairing</strong></p>
        <ul>
            {{#each this.food_pairing}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
        <p><strong>Brewers Tips:</strong>{{this.brewers_tips}}</p>
    </div>
</div>