{{#each beer}}
  <div class='card mb-3' style='max-width: 540px;'>
    <div class='row g-0'>

      <div class='col-md-4'>
        <img
          src='{{this.image_url}}'
          class='img-fluid rounded-start'
          alt='{{this.name}}'
          style='max-height: 200px;'
        />
      </div>
      <div class='col-md-8'>
        <div class='card-body'>
          <h3 class='card-title'>{{this.name}}</h3>
          <h5 class='card-title'>{{this.tagline}}</h5>
          <p class='card-text'>{{this.description}}</p>
          <div class='card' style='width: 18rem;'>
            <div class='card-header'>
              <strong>Food Pairing</strong>
            </div>
            <ul class='list-group list-group-flush'>
              <li class='list-group-item'>{{this.food_pairing}}</li>
            </ul>
          </div>
          <p class='card-text'><span><strong>
                Brewers Tips:
              </strong></span>{{this.brewers_tips}}</p>
        </div>
      </div>
    </div>
  </div>
{{/each}}