<div class='container'>
  <div class='row'>
    {{#each randomBeer}}
      <div class='col-md-3'>
        <img
          width='20px'
          src='{{this.image_url}}'
          class='card-img-top'
          alt='{{this.name}}'
        />
        <div class='card-body'>
          <h5 class='card-title'>{{this.name}}</h5>
          <h6>{{this.tagline}}</h6>
          <p class='card-text'>{{this.description}}</p>
          <ul><strong>Pairing:</strong>
            {{#each food_pairing}}
              <li>{{this}}</li>
            {{/each}}
          </ul>
          <h4><strong>Brewers tips:</strong></h4>
          <p>{{brewers_tips}}</p>
        </div>
      </div>
    {{/each}}
  </div>
</div>