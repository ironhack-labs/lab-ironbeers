<div class="container mt-5">

    <div class="row">

        {{#each randomBeer}}

        <div class="col-md-4">

            <img src="{{image_url}}" class="card-image" alt="{{name}}">

            <div class="card-body">
                <h5 class="card-title">{{name}}</h5>

                <p>{{tagline}}</p>

                <p>{{description}}</p>

                <p>{{food_pairing}}</p>

                <p>{{brewers_tips}}</p>

            </div>

        </div>

        {{/each}}

    </div>

</div>