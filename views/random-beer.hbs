<!-- views/random-beer.hbs -->


{{!< layout }}

<h1>Random Beer</h1>
<div class="beer">
    <img src="{{beer.image_url}}?{{randomValue}}" alt="{{beer.name}}">
    <h2>{{beer.name}}</h2>
    <p>{{beer.description}}</p>
    <p><em>{{beer.tagline}}</em></p>
    <p>Food Pairing: {{beer.food_pairing}}</p>
    <p>Brewer Tips: {{beer.brewers_tips}}</p>
</div> 


