<div class="container random">
  <div class="row">
    <div class="col-md-4">
      <img src="{{beer.image_url}}" alt="{{beer.name}} image">
    </div>
    <div class="col-md-8">
      <h3>{{beer.name}}</h3>

      <p>{{beer.description}}</p>

      <strong>Food Pairing</strong>
      <ul>
        {{#each beer.food_pairing}}
        <li>{{this}}</li>
        {{/each}}
      </ul>

      <p>
        <strong>Brewer's Tips:</strong>
        {{beer.brewers_tips}}</p>
      </p>

    </div>
  </div>

</div>