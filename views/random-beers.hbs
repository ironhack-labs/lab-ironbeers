<div class="container">
    {{#each randomBeer}}

    <div class="card1 mb-4">
        <div class="row g-6">
            <div class="col-md-4">
                <img src="{{image_url}}" class="card-img-top" alt="{{name}}">
            </div>
            <div class="col-md-4">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <p class="card-text">{{description}}.</p>
                    <p class="card-text">{{tagline}}.</p>
                </div>
            </div>
        </div>

    </div>
    {{/each}}
</div>