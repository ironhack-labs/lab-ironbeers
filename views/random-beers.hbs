{{#each beer}}
<div class="container p-5">
  <div class="row">
    <div class="col-4">
      <img src="{{image_url}}" class="rounded mx-auto d-block" alt="{{name}}" height="100%">
    </div>
    <div class="col-8">
        <div class="row">
          <h3>{{name}}</h3>
        </div>
        <div class="row">
          <p class="text-muted">{{tagline}}</p>
        </div>
        <div class="row">
          <p>{{description}}</p>
        </div>
        <div class="row">
            <h5>Food Pairing</h5>
            {{#each food_pairing}}
            <li>{{this}}</li>
            {{/each}}
        </div>
        <div class="row py-3">
            <p><strong>Brewer's Tips:</strong> {{brewers_tips}}</p>
        </div>
          <a type="button" class="btn btn-primary" href="../beers">Back to beers list</a>
          <a type="button" class="btn btn-primary" href="../random-beers">Check a Random Beer</a>
    </div>
  </div>
</div>
{{/each}}