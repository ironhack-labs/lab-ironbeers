<div class="container">

    <h1>Cerveza Random</h1>

    <hr>

    <div class="row">

        {{#each responseFromAPI}}
        <div class="col">
            <article class="beer-card2">
                <img src="{{image_url}}" alt="{{name}}">
            </article>
        </div>
        <div class="col">
            <p><b>{{name}}</b></p>
            <p><i>{{tagline}}</i></p>
            <p>{{description}}</p>
            <ul>
                <p><b>Food Pairing:</b></p>
                {{#each food_pairing}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p><b>Brewers Tips:</b> {{brewers_tips}}</p>
        </div>
    </div>
    {{/each}}


    <hr>

    <a href="/" class="btn btn-dark mt-3 mb-5">Home</a>

</div>