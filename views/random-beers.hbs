<div class="random-contenedor">
    <img class="card-img" src="{{this.image_url}}" alt="">
    <div class="text-contenedor">
        <h1>{{this.name}}</h1>
        <p class="text-tagline">{{this.tagline}}</p>
        <p>{{this.description}}</p>
        <h2>Food pairing!</h2>
        <ul>
            {{#each this.food_pairing}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
        <p><strong>Brewers Tips</strong>: {{this.brewers_tips}}</p>
    </div>
</div>