<div class="row">
    {{#each randomBeer}}
    <div class="col-3 p-2 ">
        <img class="random-beer" src="{{image_url}}" alt="{{name}}">

    </div>
    <div class="col-9 p-5">
        {{>beerInfo}}
        <p><strong>Food pairing:</strong></p>
        <ul>
            {{#each food_pairing}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p><strong>Brewers tips:</strong> {{brewers_tips}}</p>

    </div>
    {{/each}}
</div>