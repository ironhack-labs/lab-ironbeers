<div class="container">
<div class="card mb-3 container" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4 align-self-center">
      <img src="{{image_url}}" class="card-img justify-content-center" style="max-height: 450px" alt="random-beer">
    </div>
    <div class="col-md-8 align-self-center">
      <div class="card-body">
        <h5 class="card-title">{{name}}</h5>
        <p class="card-text">{{description}}</p>
        <p class="card-text"><small class="text-muted">{{brewers_tips}}</small></p>
        <ul class="list-group list-group-flush">
            {{#each food_pairing}}
            <li class="list-group-item">{{this}}</li>
            {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>
</div>

