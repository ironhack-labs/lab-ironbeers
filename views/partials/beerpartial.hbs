
<div class=" {{#if selected}}fixHeight randomBeer container-cardTwo {{else}} container-card {{/if}}">
  <img {{#if selected}} class="beerImageTwo" {{else}} id="beerImage" {{/if}} src="{{beer.image_url}}" alt="beer image">

  <div class="container-info">
    <h5 class="name">{{beer.name}}</h5>
    <p class="beer-tagline">{{beer.tagline}}</p>   
    <p class="beer-description">{{beer.description}}</p>   

  {{#if selected}}
     
    <h5 class="name2">Food Pairing</h5>
    <ul class="beer-list">
      {{#each beer.food_pairing}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
    
    <p class="beer-brewerTips"><b>Brewer Tips:</b> {{beer.brewers_tips}}</p>
  {{/if}}

  </div>
</div>
