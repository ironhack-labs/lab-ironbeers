<div class="beer">
    <img src="{{this.image_url}}" alt="{{this.name}}">
    <h2>{{this.name}}</h2>
    <p>{{this.description}}</p>
    <p>{{this.tagline}}</p>
    {{#if randomBeer}}
        <ul>
            {{#each this.food_pairing}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    {{/if}}
</div>