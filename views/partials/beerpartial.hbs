<div class='col'>
  <div class='card h-100'>
    <div class='card-img-top pt-3 text-center'>
      <img class='img-contain' src='{{this.image_url}}' alt='{{this.name}}' />
    </div>
    <div class='card-body'>
      <h5 class='card-title mb-1'>{{this.name}}</h5>
      <h6 class='card-subtitle mb-3 text-muted'>{{this.tagline}}</h6>
      <p class='card-text'>{{this.description}}</p>
    </div>
  </div>
</div>