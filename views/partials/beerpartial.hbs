<div class="col-sm-4 col-md-6 col-lg-4">
    <div class="d-flex justify-content-center">
        <a href="beers/beer/{{this.id}}">
            <img class="beers-img my-3" src="{{this.image_url}}" alt="{{this.name}}">
        </a>
    </div>
    <div class="text-center col-sm-8 col-10 d-flex flex-column m-auto">
        <h2 class="bg-warning text-dark rounded-top m-0">{{this.name}}</h2>
        <p class="bg-secondary text-white m-0">{{this.description}}</p>
        <p class="bg-dark text-white font-weight-bold font-italic m-0 rounded-bottom">{{this.tagline}}</p>
    </div>
</div>