<div class='card' style='width: 18rem;'>
  <img src='{{beer.image_url}}' class='card-img-top' alt='...' />
  <div class='card-body'>
    <h5 class='card-title'>{{beer.name}}</h5>
    <p class='card-text'>{{beer.description}}</p>
    <p class='card-text'>{{beer.tagline}}</p>
    {{#if random}}
      <p><b>Food Pairing</b></p>
      {{!-- <p class='card-text'>{{beer.food_pairing}}</p> --}}
      {{#each beer.food_pairing as |food_pairing|}}
        <ul>
          <li>
            {{food_pairing}}
          </li>
        </ul>
      {{/each}}
      <p class='card-text'><b>Brewer Tips:</b> {{beer.brewers_tips}}</p>
    {{/if}}
  </div>
</div>