<img src={{image_url}} />

<div class='beer-details'>

  <h2 class='beer-name'><a href='beers/beer-' + {{id}}>{{name}}</a></h2>
  <p class='beer-tagline'>{{tagline}}</p>
  <p class='beer-description'>{{description}}</p>

  {{! If the beer is random, show the food pairing and brewer's tips }}

  {{#if isRandom}}

    <p>
      <b>Food Pairing:</b>
    </p>
    <ul>
      {{#each food_pairing}}
        <li>{{this}}</li>
      {{/each}}
    </ul>

    <p>
      <b>Brewer's Tips:</b>
      {{brewers_tips}}
    </p>

  {{/if}}

</div>