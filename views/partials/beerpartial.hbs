<div class='card border-light mb-3' style='max-width: 540px;'>
  <div class='row g-0'>
    <div class='col-md-4'>
      <img src='{{this.image_url}}' class='img-fluid rounded-start' alt='...' />
    </div>
    <div class='col-md-8'>
      <div class='card-body'>
        <h5 class='card-title'>{{this.name}}</h5>
        <p class='card-text'>{{this.description}}</p>
        <p class='card-text'><small
            class='text-muted'
          >{{this.tagline}}</small></p>
      </div>
    </div>
  </div>
</div>