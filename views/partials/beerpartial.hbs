<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{beer.image_url}}" class="img-fluid rounded-start beer-cards-img" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <a href="/beers/{{beer.id}}"><h5 class="card-title">{{beer.name}}</h5></a>
        <p class="card-text">{{beer.description}}</p>
        <p class="card-text"><small class="text-muted">{{beer.tagline}}</small></p>
      </div>
    </div>
  </div>
</div>