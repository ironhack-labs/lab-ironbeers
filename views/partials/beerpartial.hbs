
<div class="card-group mb-3" style="max-width: 540px;">
  <div class="row no-gutters">
          {{#if this.image_url}}
    <div class="col-md-4 align-self-center">
      <img src="{{this.image_url}}" class="card-img justify-content-center" style="max-height: 450px" alt="random-beer">
    </div>
    <div class="col-md-8 align-self-center">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="card-text">{{this.description}}</p>
      </div>
    </div>
    {{/if}}
  </div>
</div>

