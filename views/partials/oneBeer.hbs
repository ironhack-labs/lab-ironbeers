<div class="random-beer-container">
    <img src="{{this.image_url}}" alt="">
    <aside>
        <h1>{{this.name}}</h1> 
        <p>{{this.description}}</p> 
        <p><i>{{this.tagline}}</i></p> 
        <h3>Food pairing</h3> 
        {{#each this.food_pairing}}
            <p>{{this}}</p>
        {{/each}}
        <h3>Brewers tips</h3>
        <p>{{this.brewers_tips}}</p>
    </aside>
</div>

