<div class="col-md-8">
    <div>
        <h5 class="random-beer-name"><strong>{{name}}</strong></h5>
        <p class="tagline-random">{{tagline}}</p>
    </div>
    <div>
        <p class="description-random-text">{{description}}</p>
    </div>
    <div>
        <h6><strong> Food Pairing</strong></h5>
            <ul class="foods-pairing">
                {{#each food_pairing}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
    </div>
    <div class="brewers-tips">
        <p><strong>Brewer Tips:</strong> {{brewers_tips}}</p>
    </div>
</div>