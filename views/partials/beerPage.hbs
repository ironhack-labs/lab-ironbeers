<div class="col-2">
    <img src="{{image_url}}" alt="{{name}}">
</div>
<div class="col-7">
    <h2>
        {{name}}
    </h2>
    <h5>{{tagline}}</h5>
    <hr>
    <p>{{description}}</p>
    <h6>Food Pairing:</h6>
    <ul>
        {{#each food_pairing}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
    <p><strong>Brewers Tips: </strong>{{brewers_tips}}</p>
</div>