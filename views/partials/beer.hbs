{{#if detailed}}
<div class="d-flex text-dark aling-items-center m-1 p-3">
{{else}}
<div class="d-flex flex-column text-dark w-25 m-1 p-3" style="cursor: pointer;" onclick="window.location.assign('/beers/{{this.id}}')">
{{/if}}
        <div>
            <img class="w-auto h-25 mx-auto" src="{{this.image_url}}" alt="{{this.name}}">
        </div>
        <div class="mt-5">
            <h3 class="font-weight-bold">{{this.name}}</h3>
            <p><small class="text-muted">{{this.tagline}}</small></p>
            <p>{{this.description}}</p>
            {{#if detailed}}
                <span class="font-weight-bold">Food Pairing</span>
                <ul>
                    {{#each this.food_pairing}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
                <p><span class="font-weight-bold">Brewers Tips:</span>&nbsp;{{this.brewers_tips}}</p>
            {{/if}}
        </div>
</div>
