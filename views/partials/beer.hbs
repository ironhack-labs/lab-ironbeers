{{#if detailed}}
<div class="d-flex text-dark m-1 p-3">
{{else}}
<div class="d-flex flex-column text-dark w-25 m-1 p-3">
{{/if}}
    <div class="w-auto h-25">
        <img class="mx-auto" src="{{this.image_url}}" alt="{{this.name}}">
    </div>
    <div class="mt-5">
        <h4 class="font-weight-bold">{{this.name}}</h4>
        <p><small class="text-muted">{{this.tagline}}</small></p>
        <p>{{this.description}}</p>
        {{#if detailed}}
            <h4 class="font-weight-bold">Food Pairing</h4>
            <ul>
                {{#each this.food_pairing}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
            <p><span class="font-weight-bold h4">Brewers Tips:</span>&nbsp;{{this.brewers_tips}}</p>
        {{/if}}
    </div>
</div>