<div class="random-div">
    <img src="{{ image_url }}" alt="Beer"/>
    <div class="random-text">
        <h3>{{ name }}</h3>
        <p class="tagline">{{ tagline }}</p>
        <h5>Description</h5>
        <p>{{ description }}</p>
        <h5>Food pairing</h5>
        <ul>
            {{#each food_pairing}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <h5>Brewer's tips</h5>
        <p>{{ brewers_tips }}</p>
    </div>
</div>