
<div class="col">
  <a class="beer-card" href="/beerDetail/{{this.id}}">
  <div class="card border-light beerDetails">
      <img class="card-img-top" style="width: 100px;height:250px;" src="{{this.image_url}}" alt="beer-image">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="text-muted">{{this.tagline}}</p>
        <p class="card-text">{{this.description}}</p>
      </div>      
    </div>
    </a>
</div>

