<div class="card beer-card d-flex p-5 m-5">
    <div class="row">
        <div class="col-md-4 ">
            <img src="{{ image_url}}" alt="image-beer">
        </div>
        <div class="col-md-8 d-flex align-items-center">
            <div class="card-body">
                <h5 class="card-title fw-bold">{{name}}</h5>
                <p class="card-text">{{description}}</p>
                <p class="card-text">{{tagline}}</p>

                {{#each food_pairing}}
                <ul>
                    <li>{{this}}</li>
                </ul>
                {{/each}}
                <p class="card-text fw-bold">Brewers Tips: {{brewers_tips}}</p>
            </div>
        </div>
    </div>
</div>