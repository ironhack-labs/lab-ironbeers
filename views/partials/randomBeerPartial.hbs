<img src="{{image_url}}" alt="una birra" width="auto" height="250px">
<div class="container">
    <div>
        <h1>{{name}}</h1>
    </div>
    <div>
        <p>
            {{description}}
        </p>
    </div>
    <div>
        <p>{{tagline}}</p>
    </div>
    <div>
        <ul class="food_pairing">
            {{#each food_pairing}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
    <div>
        <p><span class="font-weight-bold">Brewer Tips:</span> {{brewers_tips}}</p>
    </div>
</div>