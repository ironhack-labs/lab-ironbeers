<div class="col-md-3">
    <img class="card-img-top random-beer-img" src="{{this.image_url}}">
</div>
<div class="col-md-9">

    <article class="card">

        <div class="card-body">
            <h5 class="card-title">{{this.name}} {{this.lastName}}</h5>
            <hr>
            <p> {{this.tagline}}</p>
            <p> {{this.description}}</p>
            <p> Food pairing:</p>
            <ul>{{#each this.food_pairing}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p> <span class="bold">Brewers Tips:</span> {{this.brewers_tips}}</p>

        </div>
    </article>
    <a href="/" class="btn btn-dark btn-lg back-button">Volver a inicio</a>

</div>