<div class="col-md-6">

    <article class="card">
        <img class="card-img-top" src="{{this.image_url}}">
        <div class="card-body">
            <h3 class="card-title">{{this.name}}</h3>
            <hr>
            <p class="card-text"> {{this.description}}</p>
            <p class="card-text"> {{this.tagline}}</p>
            <p class="card-text"> {{this.food_pairing}}</p>
            <p class="card-text"> {{this.brewers_tips}}</p>
        </div>
    </article>

</div>