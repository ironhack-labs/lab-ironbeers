<div class="card mb-3" style="max-width: 340px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="{{this.image_url}}" class="card-img" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
       <h5 class="card-title">{{this.name}}</h5>
       <p class="card-text">{{this.description}}</p>
       <p class="card-text">{{this.tagline}}</p>
      </div>
    </div>
  </div>
</div> 
