<div>
    {{#each detailedBeer}}

        {{> beerPartial this}}
        
    {{/each}}

    {{#each detailedBeer}}

        <p><b>First Brewed:</b> {{first_brewed}}</p>
        <p><b>Attenuation Level:</b> {{attenuation_level}}</p>
        <p><b>PH:</b> {{ph}}</p>

        <p><b>Ingredients:</b></p>
        {{#each ingredients}}
            <li><b>{{@key}}</b>: {{this}}</li>
        {{/each}}

        <p><b>Food Pairing:</b></p>
        {{#each food_pairing}}
            <li>{{this}}</li>
        {{/each}}

        <p><b>Brew Tips:</b> {{brewers_tips}}</p>
    {{/each}}
</div>