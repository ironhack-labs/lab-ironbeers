<h1>Random Beer</h1>

<section>
  {{!without partials}}
  {{#each beers}}
    <div>
      {{#if this.image_url}}
        <img src='{{this.image_url}}' alt=' {{this.tagline}}' />
      {{/if}}
      <div class='beer-inner'>
        <h3>
          <a href='/beers/{{this.id}}'>{{this.name}}</a>
        </h3>

        <h5>{{this.tagline}}</h5>
        <p>{{this.description}}</p>

      </div>
    </div>

  {{/each}}

  <div class='buttons'>
    <a href='/views/beers/random-beer.hbs'>Choose another random beer</a>
  </div>
</section>