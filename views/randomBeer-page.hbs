<div class='container mt-5'>
  <div class='row'>

    <div class='random-beer-card col-3 text-center'>
      <img src='{{image_url}}' alt='{{name}}' />
    </div>

    <div class='col-9'>
      <div class='random-card-body text-start mb-3'>
        {{>beerCard}}

        <h4><strong>Food Pairing</strong></h4>
        <ul>
          {{#each food_pairing}}
            <li>
              {{this}}
            </li>
          {{/each}}
        </ul>

        <p><strong>Brewers tips:</strong> {{brewers_tips}}</p>
      </div>
    </div>
    
  </div>
</div>