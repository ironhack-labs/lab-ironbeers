<div class="container">


    <div class="row">
        {{#each randomBeer}}

            <div class= "beerRandomImage col-md-4">
                <img src="{{image_url}}" alt="{{name}}">
            </div>

            <div class="beerRandomText col-md-8">
                {{>beerpartial}}
                <br>

                <h3><strong>Food Pairing</strong></h3>

                {{#each food_pairing}}
                <li>{{this}}</li>
                {{/each}}

                <br>

                <p><strong>Brewers Tips:</strong> {{brewers_tips}}</p>
                    
            </div>

    
        {{/each}}
    </div>


</div>