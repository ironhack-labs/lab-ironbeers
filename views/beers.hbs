<div class="row p-4">
  {{#each beers}}
    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
      <div class="card h-100 d-flex flex-column p-4">
        <div class="d-flex align-items-center justify-content-center" style="height: 200px;">
          <img src="{{this.image_url}}" class="card-img-top" alt="{{this.name}}" onerror="this.src='images/default-image.png'" style="max-height: 200px; object-fit: contain;">
        </div>
      {{> beerpartial this}}
      </div>
    </div>
  {{/each}}
</div>
