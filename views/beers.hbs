<div class="d-flex flex-wrap gap-3 justify-content-between">
{{#each beersFromApi as |beer|}}
    <div class="card gap p-2" style="width: 22rem;">
        <img src="{{beer.image_url}}" class="card-img-top object-fit-scale" height="200"/>
        <div class="card-body">
            <h5 class="card-title"><b>{{beer.name}}</b></h5>
            <h6 class="card-subtitle mb-2 text-body-secondary">{{beer.tagline}}</h6>
            <p class="card-text">{{beer.description}}</p>
            <!--<a href="#" class="card-link">Beer info</a>-->
        </div>
    </div>
{{/each}}
</div>