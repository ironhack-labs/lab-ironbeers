<div class="container mt-3 cont-beer">
    {{#each beers as |beer|}}
        <div class="card mb-3" style="max-width: 450px;">
            <div class="row g-0">
                <div class="col-md-4">
                    <img class="card-img" src="{{beer.image_url}}" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{ beer.name }}</h5>
                        <p class="card-text">{{{beer.tagline}}}</p>
                        <p class="card-text"><small class="text-muted">{{{beer.description}}}</small></p>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}           
</div>
