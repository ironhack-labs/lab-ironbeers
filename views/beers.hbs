<h1>Estas son las beers</h1>
{{#each beersFromApi}}
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="{{image_url}}" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">{{name}}</h5>
            <h6>El id de esto es: {{id}}</h6>
            <p class="card-text">{{description}}</p>
            <p class="card-text">{{tagline}}</p>
            <a href="/{{id}}" class="btn btn-primary">Go somewhere</a>
        </div>
    </div>
{{/each}}

