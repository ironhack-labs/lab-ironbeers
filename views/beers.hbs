<div class="container d-flex flex-wrap">
    {{#each beers}}

    <div class="col-12 col-md-3 m-4 d-flex flex-column align-items-center">
        <img src="{{this.image_url}}" class="card-img-top" alt="..." style="width:50px;">
        <div class="card-body">
            <a class="card-title" href="/random-beer/{{this.id}}">{{this.name}}"</a>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text">{{this.tagline}}</p>
            <a href="/beers/{{this.id}}" class="btn btn-primary">More details</a>
        </div>
    </div>
    {{/each}}
</div>