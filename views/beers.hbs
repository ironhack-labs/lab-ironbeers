<div class="container">
    <h1>Beers</h1>
    <div class="card-group">
        {{#each beersFromApi}}
        <div class="col-3 same-height">
            <div class="card">
                <img class="card-img-top" src="{{this.image_url}}" alt="{{this.tagline}}">
                <div class="card-body">
                    <h5>{{this.name}}</h3>
                </div>
                <h5 class="card-text"> {{this.tagline}} </h5>
                <p class="card-text" >{{this.description}}</p>
            </div>
        </div>
        {{/each}}

    </div>



</div>
</div>