<div class="container">

    <div class="row info-beer">

        {{#each beers}}

        <div class="col-md-4">

            <div class="image mb-3">

                <img src="{{image_url}}" alt="image">

                <h4>{{name}}</h4>

                <p>{{description}}</p>

                <p>{{tagline}}</p>

            </div>

        </div>

        {{/each}}

    </div>

</div>