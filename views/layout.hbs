<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='/stylesheets/styles.css' />
    <title>IronBeers</title>
  </head>
  <body>
    <nav class='navbar navbar-expand-lg navbar-dark px-5 py-3'>
      <button
        class='navbar-toggler'
        type='button'
        data-toggle='collapse'
        data-target='#navbarNavAltMarkup'
        aria-controls='navbarNavAltMarkup'
        aria-expanded='false'
        aria-label='Toggle navigation'
      >
        <span class='navbar-toggler-icon'></span>
      </button>
      <div class='collapse navbar-collapse' id='navbarNavAltMarkup'>
        <div class='navbar-nav'>
          <a class='nav-item nav-link' href='/'>
            Home
          </a>
          <a class='nav-item nav-link' href='/beers'>Beers</a>
          <a class='nav-item nav-link' href='/random-beer'>Random Beer</a>
        </div>
      </div>
    </nav>
    {{{body}}}
    <footer>
      Developed by IronHack ;)
    </footer>
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p'
      crossorigin='anonymous'
    ></script>
    <script>
      window.addEventListener('load',()=>{ const
      currentUrl=location.pathname.split('/'); const element =
      document.getElementsByClassName('nav-link'); for(let
      i=0;i<element.length;i++){
      if(element[i].getAttribute('href').split('/')[1]===currentUrl[1]){
      element[i].classList.toggle('active') } } })
    </script>
  </body>
</html>